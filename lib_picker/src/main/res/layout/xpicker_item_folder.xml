<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/folder_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">


        <TextView
            android:id="@+id/folder_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/XPicker_white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/folder_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/folder_name_tv"
            android:textColor="@color/XPicker_gray_1"
            android:textSize="13sp" />


        <View
            android:id="@+id/folder_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/XPicker_gray_1" />


        <ImageView
            android:id="@+id/folder_choose_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/picker_tick"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>