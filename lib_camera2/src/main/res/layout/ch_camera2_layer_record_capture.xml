<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_capture_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/capture_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ch_camera2_white"
        android:textSize="12sp"
        tools:text="录制tips" />

    <com.cheney.camera2.view.CaptureButton
        android:id="@+id/capture_btn_layer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/capture_tip_txt"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/xpicker_capture_done_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xpicker_capture_cancel_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ch_camera2_media_record_cancel" />

        <ImageView
            android:id="@+id/xpicker_capture_done_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:src="@drawable/ch_camera2_media_record_done" />

    </LinearLayout>


</RelativeLayout>